/* pages/convas/convas.wxss */
page {
  width: 100%;
  height: 100%
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.canvas_area {
  background-color: blanchedalmond;
  width: 100%;
  height: 100%;
  flex: 1
}

.myCanvas {
  width: 100%;
  height: 75%;
  border-style: groove;
  border-color: grey
}
radio {
  transform: scale(.7);
  padding-left: 20%
}

.labelTitle {
  text-align: center;
  font-size: 30rpx;
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
  font-style: initial;
  border-bottom: 1rpx solid #CFD8DC;
}

.contractLists {
  text-align: center;
  font-size: 18rpx;
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif       
}

.section_one{
  margin:0 0 0 10rpx;
  border-bottom: 1rpx solid #CFD8DC
}

.section_two{
  margin:0 0 0 10rpx;
  border-bottom: 1rpx solid #CFD8DC
}

.canvas_tools {
  background-color: cornsilk;
  width: 100%;
  position: fixed;
  bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center
}

